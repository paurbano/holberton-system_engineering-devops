# Default server configuration
#

server {
        listen 80 default_server;
        listen [::]:80 default_server;

        location /redirect_me {
                return 301;
        }

        root /var/www/html;

        # Add index.php to the list if you are using PHP
        index index.html index.htm index.nginx-debian.html;

        server_name _;

        location / {
                add_header X-Served-By $hostname;
                # First attempt to serve request as file, then
                # as directory, then fall back to displaying a 404.
                # try_files $uri $uri/ =404;
                # task 5 - Serve AirBnB clone 
                proxy_pass http://0.0.0.0:5003/2-hbnb;
        }

        # task5
        location /static {
                 proxy_pass http://0.0.0.0:5003/;

        error_page 404 /cm_404.html;

        location = /cm_404.html {
                root /usr/share/nginx/html;
                internal;
        }

        location /hbnb_static  {
                alias /data/web_static/current/;
        }

        # project 0x1A applications server engineering & DevOps
        # task 2.
        # configure Nginx to serve your page from the route /airbnb-onepage/
        # working together with gunicorn

        location /airbnb-onepage/ {
               proxy_pass http://0.0.0.0:5000/airbnb-onepage/;
               
        }

        # task 3
        # rewrite command allow to request without port number on URI
        location /airbnb-dynamic/number_odd_or_even/ {
                 rewrite /airbnb-dynamic/(.*) /$1 break; 
                 proxy_pass http://0.0.0.0:5001/6-number_odd_or_even/;
                 
        }

        # task 4
        # route /api/ points to a Gunicorn instance listening on port 5002
        location /api/ {
                 # rewrite /api/v1/(.*) /$1 break;
                 proxy_pass http://0.0.0.0:5002/api/;
        }
}
